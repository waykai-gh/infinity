{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
  },
  "include": [
    "src/**/*"
],
  "exclude": [
      "node_modules",
      "dist"
    ]
}